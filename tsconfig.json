{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
	"noErrorTruncation": true,
	"paths": {
		"@/components/*": ["./src/components/*"],
		"@/types/*": ["./src/types/*"],
		"@/styles/*": ["./src/styles/*"],
	}
  },
}
